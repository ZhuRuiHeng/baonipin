/**index.wxss**/
.container,page{
  width: 100%;
  background: #f5f5f5;
}
.container .box{
    transition: 1s;
    position: relative;
    padding-bottom: 72px;
    transform: rotateY(0deg);
    transform-style: preserve-3d;
    width: 80%;
    margin: 60rpx auto;
    background: #fff;
    box-sizing: border-box;
    padding: 0 14rpx;
    border-radius: 8rpx;
    background-color: #fff;
    box-shadow: 0 5rpx 10rpx rgba(0,0,0,.21);
}
.box .logo{
  text-align: center;
  position: relative;
  top:-50rpx;
}
.box .logo image{
    width:100rpx;
    border-radius: 50%;
    border:2px solid #fff;
    box-sizing: border-box;
}
.list .li{
  display: flex;
  flex-direction: row;
  height: 60rpx;
  line-height: 60rpx;
  padding: 20rpx 0;
}
.list .li{
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #ddd; 
  font-size: 28rpx;
}
.list .li:first-child{
  margin-top: 40rpx;
}
.list .li label{
  font-weight: 500;
  width: 30%;
}
.list .li input,.li picker{
  font-size: 24rpx;
  padding-left: 6rpx;
  width: 60%;
}
.list .little{
    font-size: 22rpx;
    color:#626262;
    padding-top:10rpx;
    vertical-align: middle;
}
.li .lei{
    background: #e33f3f;
    color:#fff;
    font-size: 24rpx;
    height: 40rpx;
    line-height: 40rpx;
    padding:0 8rpx;
    border-radius: 5rpx;
    position: relative;
    top:8rpx;
}
.li .lei.active{
  background: #f4a755;
}
view .button{
  border-width: 1px;
  border-style: solid;
  font-size: 28rpx;
  border-radius: 4px;
  text-align: center;
  line-height: 80rpx;
  border-color: #e33f3f;
  background-color: #e33f3f;
  color: #fff;
  margin: 30rpx 0;
}
.pin{
    text-align: center;
    line-height: 60rpx;
    font-size: 26rpx;
    color: #3098f9;
    padding-bottom: 20rpx;
}
.tiaozhan{
  background: url(http://ovhvevt35.bkt.clouddn.com/pin/right.png) no-repeat center right;
  background-size: 16rpx;
  margin-right:20rpx;
}
.little.ques image{
    width:30rpx;
    position: relative;
    top:6rpx;
}
.lei.img{
  width:30rpx;
}
.lei.img image{
    width:30rpx;
    position: relative;
